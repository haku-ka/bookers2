
<%= flash[:notice] %>

<%= render 'users/list', user: @user, book: @book %>


<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody>
   <% @user.books.each do |book| %>
   <tr>
    <td>
    <%= link_to user_path(book.user) do %>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60,fallback: "no-image.jpg" %><br />
    <% end %>
    </td>
        <td><%= link_to book_path(book) do %>
            <%= book.title %>
            <% end %>
          </td>
        <td><%= book.body %></td>
        <% end %>
     </tr>
  </tbody>
</table>
    </div>